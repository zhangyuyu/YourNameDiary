<% include header.ejs %>

<div class="container">
    <form class="form-diary" method="POST" action="/your-name-diary/diary/<%= content.id %>">
        <div>
            <label class="sr-only">标题</label>
            <input name="title" class="form-control" autofocus value="<%= content.title %>"/>
        </div>

        <div style="margin-top:5px;">
            <textarea name="content" class="form-control" rows="20"><%= content.content %></textarea>
        </div>

        <div style="margin-top:5px;">
            <input name="photo" class="form-control" value="<%= content.photo == '/images/write.jpeg' ? 'Default': content.photo %>">
        </div>

        <div style="margin-top:5px;">
            <a href="/your-name-diary/diary/<%= content.id %>" class="btn btn-default">取消</a>
            <button type="submit" class="btn btn-primary">保存</button>
        </div>
    </form>
</div>  

<% include footer.ejs %>